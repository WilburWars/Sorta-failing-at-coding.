var x = 2
var y = 2
var z = true
var answer = 0

console.log("Welcome to the two number calculator!");
while (z=true){
    var x = prompt("What is your first integer?")
    var y = prompt("What is your second integer?")
  op = prompt("What do you want your operation to be? Addition, Subtraction, Multiplication or Division?");
  if (op == 'Addition', 'addition')
  {
    var answer = parseInt(x,10) + parseInt(y,10)
  }
  if (op == 'Subtraction', 'subtraction')
  {
    var answer = x - y
  }
  if (op == 'Multiplication', 'multiplication')
  {
    var answer = x * y
  }
  if (op == 'Division', "division")
  {
    var answer = x / y
  }

  console.log(answer)
  again = prompt("Do you want another computation? Yes or No?")
  if (again == 'Yes')
  {
    console.log("Great!")
  }
  else
  {
  console.log("Alright, I'll see you later!")
  stop()
  }
}

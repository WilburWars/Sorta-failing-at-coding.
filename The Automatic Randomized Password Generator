import choice
from os import sys
import time
import string
import random

adjectives = ['Blue', 'Giant', 'Smart', 'Huge', 'Delicious']
nouns = ['Books', 'Dabs', 'Waves', 'Bottleflips', 'Dogs']
def Password_Generator():
  adjective = random.choice(adjectives)
  noun = random.choice(nouns)
  number = random.randrange(1, 101)
  print("Loading")
  time.sleep(1)
  print("Selecting number")
  time.sleep(1)
  print("Selecting adjective")
  time.sleep(1)
  print("Selecting noun")
  password = str(number) + adjective + noun
  print("Finalizing.")
  time.sleep(5)
  print("Done!")
  time.sleep(.5)
  print(password)
    
Pass = input("Would you like a password?")
if Pass == "Yes" or "yes":
  print("Ok here it is")   
  Password_Generator()
  print("Thank you for using the Automatic Randomized Passoword Generator!")
